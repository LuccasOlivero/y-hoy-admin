generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drink {
  id    Int @id @default(autoincrement())
  name  String
  description String
  price Int
  color String
  percentAlcohol  Int
  amargor  Int
  flavour  String // actualizar la base de datos npx prisma db push
  transparency String
  type DrinkType
}

enum DrinkType {
  BEER
  COCKTAIL
  WINE
  OTHER
}